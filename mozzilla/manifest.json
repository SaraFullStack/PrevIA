{
  "manifest_version": 2,
  "name": "PrevIA",
  "version": "1.0.0",
  "description": "Protege y transforma tus textos: analiza, seudonimiza, generaliza o anonimiza de forma totalmente privada y offline.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_popup": "popup.html",
    "default_title": "PrevIA"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "previa@saracubero.dev",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  }
}